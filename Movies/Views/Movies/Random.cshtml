@model Movies.ViewModels.RandomMovieViewModel

@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    print movie name (popular if rented over 3 times)
    print customers who havfe rented movie
*@
@{ 
    var className = Model.Customers.Count > 3 ? "popular" : null;
}
<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie :/</p>
}
else
{
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
}